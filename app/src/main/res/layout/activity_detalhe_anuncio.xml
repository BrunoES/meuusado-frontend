<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetalheAnuncio">

    <ImageView
        android:id="@+id/img_detalhe_anuncio"
        android:layout_width="362dp"
        android:layout_height="355dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_valor_detalhe_anuncio"
        android:layout_width="361dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amiko"
        android:text="R$ 25.000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_detalhe_anuncio" />

    <TextView
        android:id="@+id/txt_titulo_detalhe_anuncio"
        android:layout_width="361dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amiko"
        android:text="teste"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_valor_detalhe_anuncio" />

    <TextView
        android:id="@+id/txt_ano_detalhe_anuncio"
        android:layout_width="361dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/amiko"
        android:text="2015"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_valor_detalhe_anuncio" />

    <TextView
        android:id="@+id/txt_descricao_detalhe_anuncio"
        android:layout_width="361dp"
        android:layout_height="115dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/amiko"
        android:text="Carro muito bom pouco rodado."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_detalhe_anuncio" />
</androidx.constraintlayout.widget.ConstraintLayout>