<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetalheAnuncio">

    <ImageView
        android:id="@+id/img_detalhe_anuncio"
        android:layout_width="355dp"
        android:layout_height="234dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_valor_detalhe_anuncio"
        android:layout_width="340dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amiko"
        android:text="R$ 25.000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_detalhe_anuncio" />

    <TextView
        android:id="@+id/txt_titulo_detalhe_anuncio"
        android:layout_width="340dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amiko"
        android:text="teste"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_valor_detalhe_anuncio" />

    <TextView
        android:id="@+id/txt_ano_detalhe_anuncio"
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:fontFamily="@font/amiko"
        android:text="2015"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_descricao_detalhe_anuncio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_detalhe_anuncio"
        app:layout_constraintVertical_bias="0.318" />

    <TextView
        android:id="@+id/txt_descricao_detalhe_anuncio"
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/amiko"
        android:text="Carro muito bom pouco rodado."
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_detalhe_anuncio"
        app:layout_constraintVertical_bias="0.019" />

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>